(defun areaCuadrado()
	(princ "Area del cuadrado")
	(princ #\Newline)
	(princ "Digite el valor del lado: ")
	(setq l (read))
	(format t "El area del cuadrado es: ~a" (* l l))	
)

(defun areaRectangulo()
	(princ "Area del rectangulo")
	(princ #\Newline)
	(princ "Digite el valor de la base: ")
	(setq b (read))
	(princ "Digite el valor de la altura: ")
	(setq h (read))
	(format t "El area del rectangulo es: ~a" (* b h))	
)

(defun areaTriangulo()
	(princ "Area del triangulo")
	(princ #\Newline)
	(princ "Digite el valor de la base: ")
	(setq b (read))
	(princ "Digite el valor de la altura: ")
	(setq h (read))
	(format t "El area del triangulo es: ~a" (/ (* b h) 2))
)

(defun areaCirculo()
	(princ "Area del circulo")
	(princ #\Newline)
	(princ "Digite el valor del radio: ")
	(setq r (read))
	(format t "El area del circulo es: ~a" (* 3.14159265 r r ))
)

(defun areaRoboide()
	(princ "Area del Romboide")
	(princ #\Newline)
	(princ "Digite el valor de la base: ")
	(setq b (read))
	(princ "Digite el valor de la altura: ")
	(setq h (read))
	(format t "El area del rombiode es: ~a" (* b h))
)