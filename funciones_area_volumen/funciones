(defun areaCuadrado()
	(princ "Area del cuadrado")
	(princ #\Newline)
	(princ "Digite el valor del lado: ")
	(setq l (read))
	(format t "El area del cuadrado es: ~a" (* l l))	
)

(defun areaRectangulo()
	(princ "Area del rectangulo")
	(princ #\Newline)
	(princ "Digite el valor de la base: ")
	(setq b (read))
	(princ "Digite el valor de la altura: ")
	(setq h (read))
	(format t "El area del rectangulo es: ~a" (* b h))	
)

(defun areaTriangulo()
	(princ "Area del triangulo")
	(princ #\Newline)
	(princ "Digite el valor de la base: ")
	(setq b (read))
	(princ "Digite el valor de la altura: ")
	(setq h (read))
	(format t "El area del triangulo es: ~a" (/ (* b h) 2))
)

(defun areaCirculo()
	(princ "Area del circulo")
	(princ #\Newline)
	(princ "Digite el valor del radio: ")
	(setq r (read))
	(format t "El area del circulo es: ~a" (* 3.14159265 r r ))
)

(defun areaRoboide()
	(princ "Area del Romboide")
	(princ #\Newline)
	(princ "Digite el valor de la base: ")
	(setq b (read))
	(princ "Digite el valor de la altura: ")
	(setq h (read))
	(format t "El area del rombiode es: ~a" (* b h))
)

(defun volumenCubo ()
	(princ "Volumen de un cubo")
	(princ #\Newline)
  	(princ "Digite el valor del lado del cubo: ")
  	(setq lado (read))
  	(format t "El volumen del cubo es: ~a" (* lado lado lado))
)

(defun volumenEsfera ()

  	(princ "Volumen de una Esfera")
  	(princ #\Newline)
  	(princ "Digite el valor del radio de la esfera: ")
  	(setq radio (read))
  	(format t "El volumen de la esfera es: ~a" (* (/ 4 3) 3.14159 (* radio radio radio)))
)

(defun volumenCilindro ()
	(princ "Volumen de un Cilindro")
	(princ #\Newline)
  	(princ "Digite el valor del radio de la base del cilindro: ")
  	(setq radio (read))
  	(princ "Digite el valor de la altura del cilindro: ")
  	(setq altura (read))
  	(format t "El volumen del cilindro es: ~a" (* 3.14159 (* radio radio) altura))
)

(defun volumenCono ()
	(princ "Volumen de un Cono")
	(princ #\Newline)
  	(princ "Digite el valor del radio de la base del cono: ")
  	(setq radio (read))
  	(princ "Digite el valor de la altura del cono: ")
  	(setq altura (read))
  	(format t "El volumen del cono es: ~a~%" (* (/ 1 3) 3.14159 (* radio radio) altura))
)

(defun volumenPrismaRectangular ()
  	(princ "Volumen de un Prisma Rectangular")
	(princ #\Newline)
  	(princ "Digite el valor del largo del prisma: ")
  	(setq largo (read))
  	(princ "Digite el valor del ancho del prisma: ")
  	(setq ancho (read))
  	(princ "Digite el valor de la altura del prisma: ")
  	(setq altura (read))
  	(format t "El volumen del prisma rectangular es: ~a" (* largo ancho altura))

)



